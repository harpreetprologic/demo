import React, {useState} from 'react';
import {
  View,
  TextInput,
  Text,
  TouchableOpacity,
  StyleSheet,
} from 'react-native';
import AsyncStorage from '@react-native-async-storage/async-storage';

const Register1 = props => {
  const [firstName, setfirstName] = useState('');
  const [lastName, setlastName] = useState('');
  const [gender, setgender] = useState('');
  const [dateBirth, setdateBirth] = useState('');

  const register = props => {
    if (firstName == '') {
      alert('Please enter First Name');
    } else if (lastName == '') {
      alert('Please enter Last Name');
    } else if (gender == '') {
      alert('Please enter Gender');
    } else if (dateBirth == '') {
      alert('Please enter Date of Birth');
    } else {
      userSave();
    }
  };

  const userSave = async () => {
    let user = {
      firstName: firstName,
      lastName: lastName,
      gender: gender,
      dateBirth: dateBirth,
    };
    const usersArray = await AsyncStorage.getItem('users');
    let newUsersArray = [];
    if (usersArray != null) {
      newUsersArray = JSON.parse(usersArray);
    }
    newUsersArray.push(user);
    AsyncStorage.setItem('users', JSON.stringify(newUsersArray));
    setfirstName('');
    setlastName('');
    setgender('');
    setdateBirth('');
  };

  return (
    <View style={{flex: 1}}>
      <TextInput
        style={[styles.field, styles.marginFieldTop]}
        value={firstName}
        onChangeText={text => setfirstName(text)}
        placeholder={'First Name'}
      />
      <TextInput
        style={styles.field}
        value={lastName}
        onChangeText={text => setlastName(text)}
        placeholder={'Last Name'}
      />
      <TextInput
        style={styles.field}
        value={gender}
        onChangeText={text => setgender(text)}
        placeholder={'Gender'}
      />
      <TextInput
        style={styles.field}
        value={dateBirth}
        onChangeText={text => setdateBirth(text)}
        placeholder={'Date of Birth'}
      />
      <TouchableOpacity style={styles.button} onPress={() => register()}>
        <Text style={{color: 'white'}}>Register</Text>
      </TouchableOpacity>

      <TouchableOpacity
        style={styles.button}
        onPress={() => props.navigation.navigate('HomeScreen')}>
        <Text style={{color: 'white'}}>Go to Home</Text>
      </TouchableOpacity>
    </View>
  );
};

export default Register1;

const styles = StyleSheet.create({
  field: {
    width: '90%',
    height: 40,
    borderWidth: 1,
    alignSelf: 'center',
    marginTop: 10,
    paddingHorizontal: 8,
  },
  marginFieldTop: {
    marginTop: 80,
  },
  button: {
    width: '90%',
    height: 44,
    alignSelf: 'center',
    backgroundColor: 'black',
    justifyContent: 'center',
    alignItems: 'center',
    marginTop: 40,
  },
});
